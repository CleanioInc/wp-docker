#!/bin/bash
WEEK=$((($(date +%e)-1)/7+1))
docker exec -t blog_mysql_1 /backup.sh | gzip -9 > /tmp/wp_backup$WEEK.sql.gz
tar cf /tmp/ejosh_site$WEEK.bak.tar /var/www/html/ejosh/

s3cmd put /tmp/wp_backup$WEEK.sql.gz s3://ejoshblog-backup/weekly/wp_backup$WEEK.sql.gz && rm /tmp/wp_backup$WEEK.sql.gz
s3cmd put /tmp/ejosh_site$WEEK.bak.tar s3://ejoshblog-backup/weekly/ejosh_site$WEEK.bak.tar && rm /tmp/ejosh_site$WEEK.bak.tar
